{
  "autoUpdate": false,
  "createPRs": true,
  "ignoredPackages": ["@types/node"],
  "includeDev": true,
  "onlyDirect": false,
  "packageRules": [
    {
      "name": "react",
      "updateStrategy": "minor",
      "autoUpdate": false,
      "ignoredVersions": ["19.0.0-beta.1"]
    },
    {
      "name": "@types/*",
      "updateStrategy": "patch",
      "autoUpdate": true
    }
  ],
  "baseBranch": "main",
  "allowMajorUpdates": false,
  "allowPrerelease": false,
  "defaultUpdateStrategy": "minor",
  "schedule": {
    "enabled": false,
    "daysOfWeek": [1, 2, 3, 4, 5],
    "hour": 9,
    "includeWeekends": false
  },
  "batchSize": 5,
  "parallelUpdates": false,
  "createSeparatePRs": false,
  "lockFileUpdate": true,
  "retryAttempts": 3,
  "retryDelay": 1000,
  "dryRun": false,
  "confirmBeforeUpdate": false,
  "workspace": {
    "processAllWorkspaces": true,
    "syncVersionsAcrossWorkspaces": true,
    "createSeparatePRsPerWorkspace": true,
    "updateInternalDependencies": false,
    "maintainWorkspaceVersionSync": true,
    "workspaceRules": [
      {
        "pattern": "@myapp/frontend*",
        "ignoredPackages": ["webpack"],
        "updateStrategy": "minor",
        "autoUpdate": false
      },
      {
        "pattern": "@myapp/backend*",
        "updateStrategy": "patch",
        "autoUpdate": true
      },
      {
        "pattern": "*-tools",
        "ignoredPackages": ["eslint"],
        "updateStrategy": "minor"
      }
    ]
  }
}
