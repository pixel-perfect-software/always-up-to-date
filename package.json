{
  "name": "@pixel-perfect-software/always-up-to-date",
  "version": "1.0.2",
  "author": "Tyler Robertson <@tylernrobertson> (https://github.com/TylerNRobertson)",
  "description": "A highly customizable and reusable dependency checker that keeps npm dependencies always up to date.",
  "bugs": {
    "url": "https://github.com/TylerNRobertson/always-up-to-date/issues"
  },
  "homepage": "https://github.com/TylerNRobertson/always-up-to-date#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TylerNRobertson/always-up-to-date.git"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "keywords": [
    "npm",
    "dependencies",
    "updater",
    "automation",
    "cli",
    "package-manager",
    "dependency-management",
    "maintenance",
    "pnpm",
    "yarn",
    "checker"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "alwaysuptodate": "dist/cli.js",
    "always-up-to-date": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "pnpm run build && pnpm test",
    "prepack": "pnpm run build",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --silent",
    "test:badges": "pnpm test:coverage && jest-coverage-badges --output ./badges",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "audit": "node dist/cli.js audit",
    "auto": "node dist/cli.js auto",
    "check": "node dist/cli.js check"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "@octokit/rest": "^22.0.0",
    "axios": "^1.9.0",
    "colorette": "^2.0.20",
    "commander": "^14.0.0",
    "jest-coverage-badges": "^1.1.2",
    "semver": "^7.7.2",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.23",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "minimist@<0.2.1": ">=0.2.1",
    "minimist@<0.2.4": ">=0.2.4"
  }
}
