{
  "name": "@pixel-perfect-software/always-up-to-date",
  "version": "1.0.22",
  "author": "Tyler Robertson <@tylernrobertson> (https://github.com/TylerNRobertson)",
  "description": "A highly customizable and reusable dependency checker that keeps npm dependencies always up to date.",
  "license": "MIT",
  "engines": {
    "node": ">=22.1.0",
    "pnpm": ">=10.22.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "pnpm run build && pnpm test",
    "prepack": "pnpm run build",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --silent",
    "test:badges": "pnpm test:coverage && jest-coverage-badges --output ./badges",
    "clean": "rm -rf dist",
    "check-deps": "node dist/index.js check",
    "help": "node dist/index.js help",
    "init": "node dist/index.js init",
    "update-deps": "node dist/index.js update"
  },
  "bin": {
    "autd": "dist/index.js",
    "alwaysuptodate": "dist/index.js",
    "always-up-to-date": "dist/index.js"
  },
  "bugs": {
    "url": "https://github.com/pixel-perfect-software/always-up-to-date/issues"
  },
  "homepage": "https://github.com/pixel-perfect-software/always-up-to-date#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixel-perfect-software/always-up-to-date.git"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "keywords": [
    "npm",
    "dependencies",
    "updater",
    "automation",
    "cli",
    "package-manager",
    "dependency-management",
    "maintenance",
    "pnpm",
    "yarn",
    "checker"
  ],
  "dependencies": {
    "@inquirer/prompts": "^8.0.1",
    "@octokit/rest": "^22.0.1",
    "axios": "^1.13.2",
    "colorette": "^2.0.20",
    "commander": "^14.0.2",
    "glob": "^12.0.0",
    "semver": "^7.7.3",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  }
}
