{
  "name": "@pixel-perfect-software/always-up-to-date",
  "version": "1.0.13",
  "author": "Tyler Robertson <@tylernrobertson> (https://github.com/TylerNRobertson)",
  "description": "A highly customizable and reusable dependency checker that keeps npm dependencies always up to date.",
  "bugs": {
    "url": "https://github.com/pixel-perfect-software/always-up-to-date/issues"
  },
  "homepage": "https://github.com/pixel-perfect-software/always-up-to-date#readme",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixel-perfect-software/always-up-to-date.git"
  },
  "directories": {
    "doc": "docs",
    "example": "examples",
    "test": "tests"
  },
  "keywords": [
    "npm",
    "dependencies",
    "updater",
    "automation",
    "cli",
    "package-manager",
    "dependency-management",
    "maintenance",
    "pnpm",
    "yarn",
    "checker"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.12.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "autd": "dist/index.js",
    "alwaysuptodate": "dist/index.js",
    "always-up-to-date": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "pnpm run build && pnpm test",
    "prepack": "pnpm run build",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --silent",
    "test:badges": "pnpm test:coverage && jest-coverage-badges --output ./badges",
    "clean": "rm -rf dist",
    "check": "node dist/index.js check",
    "update": "node dist/index.js update"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "@octokit/rest": "^22.0.0",
    "axios": "^1.9.0",
    "colorette": "^2.0.20",
    "commander": "^14.0.0",
    "glob": "^11.0.2",
    "semver": "^7.7.2",
    "ts-command-line-args": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.23",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  },
  "pnpm": {
    "overrides": {
      "minimist@<0.2.1": ">=0.2.1",
      "minimist@<0.2.4": ">=0.2.4"
    }
  }
}
