{
  "updateStrategy": "minor",
  "allowMajorUpdate": false,
  "ignoredPackages": [],
  "ignoredVersions": {},
  "createPullRequest": true,
  "retryAttempts": 3,
  "retryDelay": 1000,
  "workspace": {
    "processAllWorkspaces": true,
    "syncVersionsAcrossWorkspaces": true,
    "createSeparatePRsPerWorkspace": true,
    "updateInternalDependencies": false,
    "maintainWorkspaceVersionSync": true,
    "workspaceRules": [
      {
        "pattern": "@test-monorepo/ui-components",
        "updateStrategy": "patch",
        "ignoredPackages": ["react", "react-dom"],
        "autoUpdate": false
      },
      {
        "pattern": "@test-monorepo/web-app",
        "updateStrategy": "minor",
        "autoUpdate": true
      },
      {
        "pattern": "@test-monorepo/mobile-app",
        "updateStrategy": "patch",
        "ignoredPackages": ["react-native"],
        "autoUpdate": false
      }
    ]
  }
}
