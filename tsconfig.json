{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["src/**/*", "tests/test-performance.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "tests/**/*"]
}
